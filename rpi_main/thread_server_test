from UI_package import Menu
from server_package import Server
import os
import threading

myserver = Server()

myserver.update_massege("on")

t1 = threading.Thread(target=myserver.send, args=())
t1.start()


while True:
    x = input()
    if x == '1':
        myserver.update_massege("on")
    elif x == '0':
        myserver.update_massege("off")
    elif x == '2':
        myserver.setLog(False)
    elif x == '3':
        myserver.setLog(True)